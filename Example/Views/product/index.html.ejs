<!doctype html>
<html lang="en">
<%- include('../common/Head.html.ejs') %>
<body>


<%- include('../common/Header.html.ejs') %>
<% const css = '\n' +
        '    background: #00cbfc12;\n' +
        '    padding: 2rem;\n' +
        '    border-radius: 10px;\n' %>

<div class="container mt-4 mb-4">

    <div class="row">
        <div class="col-3">

            <nav class="sub-navigation mt-0">
                <ul class="sub-navigation__list sub-navigation__list--first">
                    <% products.forEach((product, index) => { %>
                    <li class="sub-navigation__item">
                        <a href="<%= product.url %>" class="sub-navigation__link"><%= product.name %></a>
                    </li>
                    <% }) %>
                </ul>
            </nav>

        </div>
        <div class="col-9">
            <% products.forEach((product, i)=> { const indexs = cols(i) %>

            <div class="row align-items-stretch">
                <div class="col-<%= indexs[0] %>" style="<%= i%2==0 ? css : ''%>">
                    <% if(i % 2 === 1) { %>
                        <div class="card-img-top"
                             style=" height: 100%; min-height: 275px; overflow: hidden; background-image: url('https://headless-house-of-code.s1.umbraco.io<%= product.photo.umbracoFile.src %>'); background-position: 50% 50%; background-size: cover">
                        </div>
                    <% } else { %>
                        <p><%= product.description %></p>
                        <a href="<%= product.url %>">
                            <span class="button button--blue">Read more</span>
                        </a>
                    <% } %>
                </div>
                <div class="col-<%= indexs[1] %>"  style="<%= i%2==1 ? css : ''%>">
                    <% if(i % 2 === 0) { %>
                        <div class="card-img-top"
                             style="height: 100%; min-height: 275px; overflow: hidden; background-image: url('https://headless-house-of-code.s1.umbraco.io<%= product.photo.umbracoFile.src %>'); background-position: 50% 50%; background-size: cover">
                        </div>
                    <% } else { %>
                            <p><%= product.description %></p>
                            <a href="<%= product.url %>">
                                <span class="button button--blue">Read more</span>
                            </a>
                    <% } %>
                </div>

            </div>
            <% }) %>

        </div>
    </div>


</div>


<%- include('../common/Footer.html.ejs', {
address: address,
footerHeader: footerHeader,
footerCTA
}) %>

</body>
</html>
